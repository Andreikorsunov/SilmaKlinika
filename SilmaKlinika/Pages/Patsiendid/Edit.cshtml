@page
@model SilmaKlinika.Pages.Patsiendid.EditModel
@{
}
<br />
<h2>Muuda töötaja</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="POST">
    <input type="hidden" name="id" value="@Model.patsiendidInfo.pID">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Eesnimi</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="enimi" value="@Model.patsiendidInfo.eNimi" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Perekonnanimi</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="pnimi" value="@Model.patsiendidInfo.pNimi" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Telefon</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="telefon" value="@Model.patsiendidInfo.telefon" />
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Kinnita</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Tühista</a>
        </div>
    </div>
</form>